development:
  reproxy:  false
  base_url: /images/
  mount_at: /images/
  storage:
    adapter:  s3
    access_key_id:     <%= ENV['AMAZON_ACCESS_KEY_ID'] %>
    secret_access_key: <%= ENV['AMAZON_SECRET_ACCESS_KEY'] %>
    bucket: actsasimagestore
    server: s3-ap-northeast-1.amazonaws.com
  cache:
    adapter: file_system

