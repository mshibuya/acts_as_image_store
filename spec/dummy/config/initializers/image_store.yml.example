production:
  reproxy:  false
  base_url: /images/
  mount_at: /images/
  storage: &s3config
    adapter:  s3
    access_key_id:     <%= ENV['AMAZON_ACCESS_KEY_ID'] %>
    secret_access_key: <%= ENV['AMAZON_SECRET_ACCESS_KEY'] %>
    bucket:            imagestore.test
  cache: *s3config

